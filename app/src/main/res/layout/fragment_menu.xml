<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.MenuFragment">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_gallery"/>

    <LinearLayout android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:layout_width="wrap_content"
            android:id="@+id/button1"
            android:layout_height="wrap_content"
            android:text="Китайская кухня"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="0.3"></Button>
        <Button
            android:text="Европейская кухня"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"></Button>
        <Button
            android:text="Казахская кухня"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"></Button>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/chinese_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Первые блюда"
            android:textAllCaps="true"
            android:layout_marginStart="10dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/horda_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/horda_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Хорда суп"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/horda_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/horda_soup"
                android:layout_marginEnd="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lapsha_linea"
            android:layout_below="@+id/horda_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/lapsha_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Лапша суп"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/lapsha_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/lapsha_soup"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vanton_linea"
            android:layout_below="@+id/lapsha_linea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/vanton_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вонтон суп"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/vanton_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/vonton_soup"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/vtorye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вторые блюда"
            android:textAllCaps="true"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/vanton_linea"
            android:layout_marginTop="50dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/myaso_linear"
            android:layout_below="@+id/vtorye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/myaso_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мясо в соусе"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/myaso_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/myaso_v_souse"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kuritsa_linea"
            android:layout_below="@+id/myaso_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/kuritsa_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Курица по Пекински"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/kuritsa_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/kuritsa"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lomein_linea"
            android:layout_below="@+id/kuritsa_linea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/lomein_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Лапша"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/lomein_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/lapsha"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/european_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
