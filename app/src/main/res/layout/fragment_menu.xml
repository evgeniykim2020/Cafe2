        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Первые блюда"
            android:textAllCaps="true"
            android:layout_marginStart="10dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/goroh_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/goroh_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Гороховый суп"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/goroh_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/goroh"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/uha_linea"
            android:layout_below="@+id/goroh_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/uha_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Уха"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/uha_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/uha"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/solyanka_linea"
            android:layout_below="@+id/uha_linea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/solyanka_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Солянка"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/solyanka_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/solyanka"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/vtorye_eu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вторые блюда"
            android:textAllCaps="true"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/solyanka_linea"
            android:layout_marginTop="50dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/befstro_linear"
            android:layout_below="@+id/vtorye_eu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/befstro_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Бефстроганов"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/befstro_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/befstog"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/makaron_linea"
            android:layout_below="@+id/befstro_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/makaron_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Макароны"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/makaron_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/makaron"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pelmen_linea"
            android:layout_below="@+id/makaron_linea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/pelmen_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пельмени"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/pelmen_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/pelmen"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kazakh_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Первые блюда"
            android:textAllCaps="true"
            android:layout_marginStart="10dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/kyufta_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/kyufta_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кюфта"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/kyufta_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/kyufta"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nuhat_linea"
            android:layout_below="@+id/kyufta_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/nuhat_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Шурпа нухат"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/nuhat_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/nuhat"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_linea"
            android:layout_below="@+id/nuhat_linea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/post_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Постная шурпа"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/post_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/post"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/vtorye_kzh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вторые блюда"
            android:textAllCaps="true"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/post_linea"
            android:layout_marginTop="50dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/beshxx1_linear"
            android:layout_below="@+id/vtorye_kzh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/beshxx1_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Бешпармак XXI"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/beshxx1_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/beshxxi"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/besh_kur_linea"
            android:layout_below="@+id/beshxx1_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/besh_kur_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Макароны"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/besh_kur_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
